<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unite_investing.LoginRegister.RegisterPage">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regEmail"
        android:hint="Email"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/regName"
        android:layout_below="@+id/regName" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/regName"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="Name"
        android:layout_alignParentEnd="true">
        <requestFocus />
    </EditText>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/regBday"
        android:layout_alignParentStart="true"
        android:hint="Birthdate MM-DD-YYYY"
        android:layout_below="@+id/regEmail"
        android:layout_alignEnd="@+id/regEmail"
        android:maxLength="10"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bsignin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:text="Back to Sign In"
        android:onClick="backToLogin"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        android:id="@+id/bregister"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="createAcct"/>


</RelativeLayout>
